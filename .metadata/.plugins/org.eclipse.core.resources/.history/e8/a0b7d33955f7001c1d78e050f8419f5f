package java0629;

public class ex04_역삼각형별찍기 {

	public static void main(String[] args) {
		// *********
		// @*******@
		// @@*****@@
		// @@@***@@@
		// @@@@*@@@@
		
		for (int i = 1; i <= 0; i++) {
			System.out.print("^");	
		}
		for (int i=1; i<=9; i++) {
			System.out.print("*");
		}
		System.out.println();
		
		for (int i = 1; i <= 1; i++) {
			System.out.print("^");	
		}
		for (int i=1; i<=7; i++) {
			System.out.print("*");
		}
		System.out.println();
		
		for (int i = 1; i <= 2; i++) {
			System.out.print("^");	
		}
		for (int i=1; i<=5; i++) {
			System.out.print("*");
		}
		System.out.println();
		
		for (int i = 1; i <= 3; i++) {
			System.out.print("^");	
		}
		for (int i=1; i<=3; i++) {
			System.out.print("*");
		}
		System.out.println();
		
		for (int i = 1; i <= 4; i++) {
			System.out.print("^");	
		}
		for (int i=1; i<=1; i++) {
			System.out.print("*");
		}
		System.out.println();
	}

}
