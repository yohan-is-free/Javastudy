package java0629;

public class ex04_역삼각형별찍기 {

	public static void main(String[] args) {
		// *********
		// @*******@
		// @@*****@@
		// @@@***@@@
		// @@@@*@@@@
		for (int i = 0; i <= 5; i++) {
			System.out.println(" ");
			for (int j = 0; j > 4- i; j--) {
				System.out.print("^");
			}

		}
	}

}
