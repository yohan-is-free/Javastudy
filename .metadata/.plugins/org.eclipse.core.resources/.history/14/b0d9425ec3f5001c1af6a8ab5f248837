package java0627;

import java.util.Scanner;

public class ex04_합계와평균 {

	public static void main(String[] args) {
		
		int num = 0, sum = 0;
		double cnt = 0;
		
		Scanner sc = new Scanner(System.in);
		System.out.println("숫자를 입력하세요 : ");		
		while(true) {
			num = sc.nextInt();
			if(num>100 || num < 0){
				break;
			}else {
				sum += num;
				cnt++;;
			}
		}
		System.out.println("총점 : "+sum);
		System.out.println("평균 : "+(sum/cnt));
		

	}

}
